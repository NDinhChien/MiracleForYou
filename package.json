{
  "name": "miracleforyou",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx -r dotenv/config src/server.ts",
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config build/server.js",
    "build": "npm run clean && npm run build-ts",
    "build-ts": "tsc",
    "clean": "rimraf ./build",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon -r dotenv/config build/server.js",
    "watch": "npx concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "upgrade": "npm update --save-dev && npm update --save",
    "eslint": "eslint src tests --ext .js,.ts",
    "test": "jest --forceExit --detectOpenHandles --verbose",
    "lint": "npx eslint src tests",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src tests --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "mongoose": "^7.4.3",
    "multer": "^1.4.5-lts.1",
    "newrelic": "^10.6.2",
    "qs": "^6.11.2",
    "redis": "^4.6.7",
    "typescript": "^5.2.2",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.197",
    "@types/mime-types": "^2.1.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/newrelic": "^9.14.0",
    "@types/newrelic__winston-enricher": "^0.1.1",
    "@types/node": "^20.5.1",
    "@types/request": "^2.48.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "colors": "^1.4.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7"
  }
}
