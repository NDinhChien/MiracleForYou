# Environment Name
NODE_ENV=test

# TimeZone
TZ=UTC

# Server listen to this port
PORT=3000

# Cors
CORS_URL=*

# Database 
# YOUR_MONGO_DB_NAME
DB_NAME=testdb
DB_MIN_POOL_SIZE=2
DB_MAX_POOL_SIZE=5

# YOUR_MONGO_DB_USER
DB_USER=testuser
DB_USER_PWD=12345678
# MongoDB admin user instead when using Docker
# DB_ADMIN=admin
# DB_ADMIN_PWD=

# YOUR_MONGO_DB_HOST
# DB_HOST=mongo when using Docker
# DB_HOST=localhost
# DB_PORT=27017

# when using MongoDB Atlas
DB_HOST=cluster0.ytocmgr.mongodb.net

#Redis
#REDIS_HOST=redis when using Docker
REDIS_HOST=redis-10835.c9.us-east-1-2.ec2.cloud.redislabs.com
REDIS_PORT=10835
REDIS_PASSWORD=redisCloudPasswrod

# Log
LOG_DIR=logs/test

# Public
PUB_DIR=public

# Token Info
# 10 minutes: 600 Sec
ACCESS_TOKEN_VALIDITY=600
# 15 minutes: 900 Sec
REFRESH_TOKEN_VALIDITY=900
TOKEN_ISSUER=api.dev.abc.com
TOKEN_AUDIENCE=abc.com

# Caching
# 5 minutes: 300 seconds
CONTENT_CACHE_DURATION=300

# Business rules
EMAIL_REFRESH_TIME=2
EMAIL_TRY_TIME=2
EMAIL_ENTER_IN=60 # valid time to enter code
EMAIL_VALID_IN=60 # verification is valid in 
EMAIL_RENEW_DURATION=180;

LOGIN_TRY_TIME=3;
LOGIN_RENEW_DURATION=180

NAME_RENEW_DURATION=180
AVT_MAX_SIZE=2097152
AVT_MIME_TYPES="image/png, image/jpeg"

WMSG_MAX_CAPACITY=5
WMSG_MAX_GET=2